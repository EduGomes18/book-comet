{
  "name": "book-comet",
  "version": "1.0.0",
  "description": "code challenge for api development",
  "main": "server.js",
  "scripts": {
    "server": "node ./dist-server/server",
    "runAll": "NODE_ENV=development npm-run-all build server",
    "transpile": "babel ./src --out-dir dist-server",
    "clean": "rimraf dist-server",
    "dev": "nodemon",
    "build": "npm-run-all clean transpile"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/EduGomes18/book-comet.git"
  },
  "author": "edugomes.dev",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/EduGomes18/book-comet/issues"
  },
  "homepage": "https://github.com/EduGomes18/book-comet#readme",
  "dependencies": {
    "@babel/cli": "^7.17.6",
    "@babel/core": "^7.17.9",
    "@babel/preset-env": "^7.16.11",
    "@babel/runtime": "^7.17.9",
    "express": "^4.17.3",
    "nodemon": "^2.0.15",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2"
  },
  "nodemonConfig": {
    "exec": "npm run runAll",
    "watch": [
      "server/*",
      "src/*"
    ]
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ],
    "plugins": [
      "@babel/plugin-transform-runtime"
    ]
  },
  "devDependencies": {
    "@babel/plugin-transform-runtime": "^7.17.0"
  }
}
